@model PortfolioGen.Models.Portfolio

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg">
                <div class="card-header bg-info text-white text-center py-4">
                    <h1 class="card-title mb-0 h2">Skapa portfölj</h1>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-bold">
                                <i class="bi bi-person-badge"></i> @Html.DisplayNameFor(model => model.Title)
                            </label>
                            <input asp-for="Title" class="form-control form-control-lg" placeholder="Ange din titel..." />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Bio" class="form-label fw-bold">
                                <i class="bi bi-chat-text"></i> @Html.DisplayNameFor(model => model.Bio)
                            </label>
                            <textarea asp-for="Bio" class="form-control" rows="4" placeholder="Berätta om dig själv..."></textarea>
                            <span asp-validation-for="Bio" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ProfileImg" class="form-label fw-bold">
                                <i class="bi bi-image"></i> @Html.DisplayNameFor(model => model.ProfileImg)
                            </label>
                            <input asp-for="ProfileImg" class="form-control" type="file" accept="image/*" />
                            <div class="form-text">Välj en profilbild (JPG, PNG eller GIF)</div>
                            <span asp-validation-for="ProfileImg" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-plus-circle"></i> Skapa portfölj
                            </button>
                        </div>
                    </form>
                </div>

                <div class="card-footer bg-light text-center">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Tillbaka
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}