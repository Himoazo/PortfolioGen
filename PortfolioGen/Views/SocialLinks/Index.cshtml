@model IEnumerable<PortfolioGen.Models.SocialLink>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-info text-white d-flex justify-content-between align-items-center py-3">
            <h1 class="card-title mb-0 h2">
                Sociala länkar
            </h1>
            <a asp-action="Create" class="btn btn-light btn-sm">
                Lägg till
            </a>
        </div>

        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="fw-bold">
                                    @Html.DisplayNameFor(model => model.Platform)
                                </th>
                                <th class="fw-bold">
                                    @Html.DisplayNameFor(model => model.Url)
                                </th>
                                <th class="fw-bold text-center">Åtgärder</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="fw-semibold">
                                        @Html.DisplayFor(modelItem => item.Platform)
                                    </td>
                                    <td>
                                        <span class="text-muted">
                                            @Html.DisplayFor(modelItem => item.Url)
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">
                                                Redigera
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">
                                                Ta bort
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <h4 class="text-muted">Inga sociala länkar än</h4>
                    <p class="text-muted">Kom igång genom att lägga till din första sociala länk!</p>
                    <a asp-action="Create" class="btn btn-info">
                        Lägg till din första sociala länk
                    </a>
                </div>
            }
        </div>
    </div>
</div>