@model PortfolioGen.Models.SocialLink

@{
    ViewData["Title"] = "Create";
}

<h1 class="row justify-content-center">Lägg till socialamedier</h1>


<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Platform" class="control-label"></label>
                <select asp-for="Platform" class="form-control">
                    <option value=""> Välj plattform </option>
                    <option value="Gmail">Gmail</option>
                    <option value="Outlook">Outlook</option>
                    <option value="LinkedIn">LinkedIn</option>
                    <option value="Github">Github</option>
                    <option value="x.com">x.com</option>
                </select>
                <span asp-validation-for="Platform" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Url" class="control-label"></label>
                <input asp-for="Url" class="form-control" />
                <span asp-validation-for="Url" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lägg till" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Tillbaka</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
