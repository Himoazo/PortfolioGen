@page
@model SetPasswordModel
@{
    ViewData["Title"] = "Ändra lösenord";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="card shadow-sm">
    <div class="card-body">
        <h4 class="card-title mb-4">@ViewData["Title"]</h4>

        <partial name="_StatusMessage" for="StatusMessage" />

        <form id="set-password-form" method="post" novalidate>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" placeholder="Skriv ditt nya lösenord." />
                <label asp-for="Input.NewPassword">Nytt lösenord</label>
                <span asp-validation-for="Input.NewPassword" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-4">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="Bekräfta lösenordet." />
                <label asp-for="Input.ConfirmPassword">Bekräfta lösenord</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Spara nytt lösenord</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
